        <button class="mt-4 btn btn-primary btn-sm"><a href="/jobs/<%= job._id %>/edit"
                style="text-decoration: none;">Edit</a></button>
        <p></p>
        <form action="/jobs/<%= job._id %>?_method=DELETE" method="post">
            <button class="m-auto btn btn-danger btn-sm" type="submit">Delete This Job</button>
        </form>
    <% } %>

